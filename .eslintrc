{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "env": { "node": true, "es6": true, "jest": true },
  "rules": {
    "semi": "warn",
    "quotes": ["warn", "single"],
    "prettier/prettier": ["warn", { "singleQuote": true, "endOfLine": "auto" }]
  }
}
